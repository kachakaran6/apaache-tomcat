@* Views/Book/Index.cshtml *@

@model IEnumerable<WebApplication18.Models.Book>

@{
    ViewBag.Title = "Book List";
}

<h2 style="margin-bottom:20px;">üìö Book List</h2>

<!-- Search Bar -->
<form method="get" action="/Book/Search" style="margin-bottom:15px;">
    <input type="text" name="name" placeholder="Search by name" style="padding:5px; width:200px;" />
    <input type="submit" value="Search" style="padding:5px 10px;" />
</form>

<!-- Book Table -->
<table border="1" cellpadding="8" cellspacing="0" style="border-collapse:collapse; width:100%; text-align:left;">
    <thead style="background-color:#f2f2f2;">
        <tr>
            <th style="width:50px;">ID</th>
            <th>Name</th>
            <th>Author</th>
            <th style="width:100px;">Price</th>
            <th style="width:150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.book_id</td>
                <td>@item.book_name</td>
                <td>@item.author</td>
                <td>‚Çπ@item.price</td>
                <td>
                    <a href="/Book/Edit/@item.book_id">‚úèÔ∏è Edit</a> |
                    <a href="/Book/Delete/@item.book_id"
                        onclick="return confirm('Are you sure you want to delete this book?');">üóëÔ∏è Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Add Book Button -->
<div style="margin-top:15px;">
    <a href="/Book/Create"
        style="padding:8px 15px; background-color:#28a745; color:white; text-decoration:none; border-radius:4px;">
        ‚ûï Add New Book
    </a>
</div>